
global sys_count
global arguments=""

probe syscall.*
{
    if (pid() == target())
    {
        arguments = argstr
        sys_count[name]++
    }
}

probe syscall.*.return
{
        if (pid() == target())
        {
            printf("%d\t%s\t%d\t%d\t%s\n\n", sys_count[name], name, $return, pid(), arguments)
            arguments=""
        }
}
